<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ssafit.model.dao.FavoriteDao">

    <!-- 즐겨찾기 추가 -->
    <insert id="addFavorite" parameterType="map">
        INSERT INTO favorites (user_id, video_id)
        VALUES (#{userId}, #{videoId})
    </insert>
    
    <!-- 즐겨찾기 삭제 -->
    <delete id="removeFavorite" parameterType="map">
        DELETE FROM favorites 
        WHERE user_id = #{userId} 
        AND video_id = #{videoId}
    </delete>
    
    <!-- 사용자의 즐겨찾기 영상 목록 조회 -->
    <select id="selectFavoriteVideos" parameterType="string" resultType="int">
        SELECT video_id 
        FROM favorites 
        WHERE user_id = #{userId}
    </select>
    
    <!-- 즐겨찾기 여부 확인 -->
    <select id="isFavorite" parameterType="map" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM favorites 
        WHERE user_id = #{userId} 
        AND video_id = #{videoId}
    </select>
    
</mapper>