<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjhr.project.user.dao.UserDao">

	<select id="selectOne" parameterType="Map" resultType="User">
		SELECT id, name 
		FROM users
		WHERE id = #{user_id} AND password = #{user_pw}
	</select>
	
	<select id="selectAllUsers" resultType="User">
		SELECT *
		FROM users 
	</select>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO users
		VALUES (#{user_id}, #{user_pw}, #{user_name}, #{user_email}, #{user_nic}, #{user_img});
	</insert>
	
	<delete id="deleteUser" parameterType="int">
	DELETE FROM users
	WHERE id = #{user_id}
	</delete>
</mapper>