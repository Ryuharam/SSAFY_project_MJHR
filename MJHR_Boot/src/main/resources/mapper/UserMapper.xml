<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mjhr.project.user.dao.UserDao">

	<select id="selectOne" parameterType="Map" resultType="User">
		SELECT user_id, user_name 
		FROM users
		WHERE user_id = #{userId} AND user_pw = #{userPw}
	</select>
	
	<select id="selectAllUsers" resultType="User">
		SELECT *
		FROM users 
	</select>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO users
		VALUES (#{userId}, #{userPw}, #{userName}, #{userEmail}, #{userNic}, #{userImg});
	</insert>
	
	<select id="selectUserByNic" parameterType="String" resultType="User">
	SELECT * FROM users
	WHERE user_nic LIKE concat('%',#{userNic},'%')
	</select>
	
	<select id="uploadUserFile" parameterType="UserFile">
	INSERT INTO users(user_img)
	VALUES (#{userId}, #{filePath}, #{fileName})
	</select>
	
	
<!-- 	<delete id="deleteUser" parameterType="int">
	DELETE FROM users
	WHERE id = #{userId}
	</delete> -->
</mapper>